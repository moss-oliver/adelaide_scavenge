<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroFragment_2">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Well done! You will be using that a lot throughout Adelaide Scavange, so you should get used to seeing these icons:" />

    <LinearLayout
    	android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:layout_marginTop="25dip">
    	
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.35"
            android:orientation="horizontal" >

		    <ImageView
		        android:id="@+id/imageView_prev"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/ic_action_previous_item" />
		
		    <ImageView
		        android:id="@+id/imageView_next"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/ic_action_next_item" />
	    </LinearLayout>
	    <TextView
	        android:layout_width="0dp"
	        android:layout_weight="0.65"
	        android:layout_height="wrap_content"
	        android:text="These show that you can view other information by swiping left and right on the screen." />
    </LinearLayout>
    
    <TextView
    	android:layout_marginTop="25dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There are some other icons that would be helpful to know aswell:" />
    
    <LinearLayout
    	android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:layout_marginTop="25dip">
    	
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.35"
            android:orientation="horizontal" >

		    <ImageView
		        android:id="@+id/icon1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/ic_map_red" />
	    </LinearLayout>
	    <TextView
	        android:layout_width="0dp"
	        android:layout_weight="0.65"
	        android:layout_height="wrap_content"
	        android:text="In Courses, the red markers represent unexplored locations.\nIn Explore, they're used to show all points in the selected category." />
    </LinearLayout>
    
    <LinearLayout
    	android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:layout_marginTop="25dip">
    	
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.35"
            android:orientation="horizontal" >

		    <ImageView
		        android:id="@+id/icon1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/ic_map_azure" />
	    </LinearLayout>
	    <TextView
	        android:layout_width="0dp"
	        android:layout_weight="0.65"
	        android:layout_height="wrap_content"
	        android:text="The blue markers represent a point that you have visited previously" />
    </LinearLayout>
    
    <LinearLayout
    	android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:layout_marginTop="25dip">
    	
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.35"
            android:orientation="horizontal" >

		    <ImageView
		        android:id="@+id/icon1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/ic_map_green" />
	    </LinearLayout>
	    <TextView
	        android:layout_width="0dp"
	        android:layout_weight="0.65"
	        android:layout_height="wrap_content"
	        android:text="The green marker highlights the point that you have selected." />
    </LinearLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
		<ImageView
	        android:id="@+id/imageView_prev"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_action_previous_item" />
	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center"
	        android:text="Swipe to the left to continue"
	    	android:textStyle="bold"
	    	android:layout_marginTop="10dip"
	    	android:visibility="gone" />
	    
	    <ImageView
	        android:id="@+id/imageView_next"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:gravity="right"
	        android:src="@drawable/ic_action_next_item" />

    </FrameLayout>

</LinearLayout>
</ScrollView>